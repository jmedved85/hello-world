@model IEnumerable<Seminari.Models.Seminar>

@{ ViewData["Title"] = "Home Page"; }

<div class="text-md-left">

    <p>Dobrodošli na stranicu <strong>BazaSeminari!</strong> Ovdje možete pretražiti ponudu seminara:</p>

    <form asp-controller="Home" asp-action="Index">
        <label for="pretraga"><strong>Pretraga: </strong></label>
        <input type="text" id="pretraga" name="pretraga" />
        <input type="submit" value="Pretraži" />
    </form>

</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdZaposlenik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>                    
                    <a asp-controller="Predbiljezbas" asp-action="Odaberi">Odaberi</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdZaposlenikNavigation.ImePrezime)
                </td>
            </tr>
        }
    </tbody>
</table>
